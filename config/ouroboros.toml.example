# OUROBOROS Configuration File
# Location: ~/.config/ouroboros/config.toml

[library]
# Music directories to scan (supports multiple paths)
music_directories = ["/home/user/Music"]

[playback]
# Default volume level (0-100)
default_volume = 50

# Enable shuffle by default
shuffle = false

# Repeat mode: "off", "one", "all"
repeat = "all"

[ui]
# Layout mode: "default", "queue", "browser"
layout = "default"

# Theme: "dark", "light", "monokai" (Note: only affects internal styling)
theme = "dark"

# Enable album art display
enable_album_art = true

# Number of album columns in grid view
album_grid_columns = 4

# Sort albums by year instead of alphabetically (within each artist)
# When true: albums sorted by release year (numeric, earliest first)
# When false: albums sorted alphabetically by title
sort_albums_by_year = true

# Ignore 'The ' prefix when sorting artists (e.g., 'The Beatles' sorts as 'Beatles')
sort_ignore_the_prefix = true

# Ignore '[' prefix when sorting artists (e.g., '[Unknown]' sorts as 'Unknown]')
sort_ignore_bracket_prefix = true

# Note: Scattered albums (soundtracks, compilations with same title across artists)
# are automatically detected and grouped together regardless of these settings

[keybinds]
# Playback controls
play = "space"
pause = "p"
next = "n"
prev = "N"

# Quit
quit = "q"

# Volume control
volume_up = "+"
volume_down = "-"

# Seek in song (left/right arrows also work)
seek_forward = "l"
seek_backward = "h"

# Tab navigation (number keys)
tab_queue = "1"
tab_browser = "2"
tab_now_playing = "3"

# Display toggles
toggle_header = "H"
toggle_controls = "C"
toggle_browser = "B"
toggle_queue = "Q"

# Modes
shuffle_toggle = "S"
repeat_cycle = "R"

[performance]
# Maximum artwork decoder threads (0 = auto-detect CPU cores)
artwork_max_workers = 0

# Items to prefetch ahead/behind viewport (reduces visible loading)
artwork_prefetch_items = 100

# Minimum queue size before spawning additional workers
artwork_spawn_threshold = 10

# Maximum memory for decoded artwork in MB (triggers LRU eviction when exceeded)
artwork_memory_limit_mb = 3072
